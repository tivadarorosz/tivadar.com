<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="{{ description or summary or site.seo.defaults.description }}">
  
  {% if layout == "post" %}
  <!-- Open Graph for Articles -->
  <meta property="og:type" content="article">
  <meta property="og:title" content="{{ title }}">
  <meta property="og:description" content="{{ summary }}">
  <meta property="og:image" content="{{ coverImage or icon or site.seo.defaults.image }}">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:locale" content="{{ site.seo.openGraph.locale }}">

  <!-- Twitter Card for Articles -->
  <meta name="twitter:card" content="{{ site.seo.twitter.card }}">
  <meta name="twitter:title" content="{{ title }}">
  <meta name="twitter:description" content="{{ summary }}">
  <meta name="twitter:image" content="{{ coverImage or icon or site.seo.defaults.image }}">
  {% elif layout == "story" %}
  <!-- Open Graph for Stories -->
  <meta property="og:type" content="article">
  <meta property="og:title" content="{{ title }}">
  <meta property="og:description" content="{{ summary or site.seo.fallbacks.story.description }}">
  <meta property="og:image" content="{{ cover.image or site.seo.defaults.image }}">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:locale" content="{{ site.seo.openGraph.locale }}">

  <!-- Twitter Card for Stories -->
  <meta name="twitter:card" content="{{ site.seo.twitter.card }}">
  <meta name="twitter:title" content="{{ title }}">
  <meta name="twitter:description" content="{{ summary or site.seo.fallbacks.story.description }}">
  <meta name="twitter:image" content="{{ cover.image or site.seo.defaults.image }}">
  {% else %}
  <!-- Default Meta Tags for Pages -->
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ title or site.seo.defaults.title }}">
  <meta property="og:description" content="{{ site.seo.defaults.description }}">
  <meta property="og:image" content="{{ site.seo.defaults.image }}">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:locale" content="{{ site.seo.openGraph.locale }}">
  
  <meta name="twitter:card" content="{{ site.seo.twitter.card }}" />
  <meta name="twitter:title" content="{{ title or site.seo.defaults.title }}" />
  <meta name="twitter:description" content="{{ site.seo.defaults.description }}" />
  <meta name="twitter:image" content="{{ site.seo.defaults.image }}" />
  {% endif %}

  <title>{{ title }} \ {{ site.title }}</title>
  
  <!-- Canonical URL -->
  <link rel="canonical" href="{{ site.url }}{{ page.url }}">
  
  <!-- RSS Feed -->
  <link rel="alternate" type="application/rss+xml" title="{{ site.title }} RSS Feed" href="/feed.xml">
  
  <!-- Favicons -->
  <link rel="icon" type="image/png" href="{{ site.assets.images.favicon32 }}" sizes="32x32">
  <link rel="icon" type="image/png" href="{{ site.assets.images.favicon16 }}" sizes="16x16">
  <link rel="apple-touch-icon" href="{{ site.assets.images.appleTouchIcon }}">
  
  <link rel="stylesheet" href="/css/style.css" />
  <script src="/js/main.js"></script>
  <script>document.documentElement.classList.remove('no-js');</script>

  <!-- Fathom - beautiful, simple website analytics -->
  <script src="{{ site.analytics.fathom.script }}" data-site="{{ site.analytics.fathom.siteId }}" defer></script>
  <!-- / Fathom -->

  <!-- Font Faces -->
  <style>
    @font-face {
      font-family: 'Styrene A';
      src: url('{{ site.assets.fonts.styreneA.bold.woff2 }}') format('woff2'),
           url('{{ site.assets.fonts.styreneA.bold.woff }}') format('woff');
      /* src: url('/fonts/StyreneA-Bold-Web.woff2') format('woff2'),
           url('/fonts/StyreneA-Bold-Web.woff') format('woff'); */
      font-weight: 700;
      font-style: normal;
    }

    @font-face {
      font-family: 'Styrene A';
      src: url('{{ site.assets.fonts.styreneA.medium.woff2 }}') format('woff2'),
           url('{{ site.assets.fonts.styreneA.medium.woff }}') format('woff');
      /* src: url('/fonts/StyreneA-Medium-Web.woff2') format('woff2'),
           url('/fonts/StyreneA-Medium-Web.woff') format('woff'); */
      font-weight: 500;
      font-style: normal;
    }

    @font-face {
      font-family: 'Styrene A';
      src: url('{{ site.assets.fonts.styreneA.regular.woff2 }}') format('woff2'),
           url('{{ site.assets.fonts.styreneA.regular.woff }}') format('woff');
      /* src: url('/fonts/StyreneA-Regular-Web.woff2') format('woff2'),
           url('/fonts/StyreneA-Regular-Web.woff') format('woff'); */
      font-weight: 400;
      font-style: normal;
    }

    @font-face {
      font-family: 'Tiempos Text';
      src: url('https://cdn.tivadarorosz.com/fonts/tiempos-text-regular.woff2') format('woff2');
      /* src: url('/fonts/tiempos-text-regular.woff2') format('woff2'); */
      font-weight: 400;
      font-style: normal;
    }

    @font-face {
      font-family: 'Tiempos Text';
      src: url('https://cdn.tivadarorosz.com/fonts/tiempos-text-medium.woff2') format('woff2');
      /* src: url('/fonts/tiempos-text-medium.woff2') format('woff2'); */
      font-weight: 500;
      font-style: normal;
    }
  </style>
  
  <!-- Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "{% if layout == 'post' or layout == 'story' %}Article{% else %}WebSite{% endif %}",
    "name": "{{ title or site.title or 'Tivadar â€” Luxury Photography & Design' }}",
    "url": "{{ site.url }}{{ page.url }}"{% if layout == 'post' or layout == 'story' %},
    "headline": "{{ title }}",
    "description": "{{ summary or description or site.seo.fallbacks.article.description }}",
    "datePublished": "{{ page.date | dateToISO }}",
    "author": {
      "@type": "Person",
      "name": "{{ site.author }}"
    }{% if layout == 'story' and location %},
    "contentLocation": {
      "@type": "Place",
      "name": "{{ location }}"
    }{% endif %}{% if layout == 'story' and cover.image %},
    "image": "{{ cover.image }}"{% elif coverImage %},
    "image": "{{ coverImage }}"{% endif %}{% endif %},
    "publisher": {
      "@type": "Person",
      "name": "{{ site.author }}",
      "url": "{{ site.url }}",
      "image": {
        "@type": "ImageObject",
        "url": "{{ site.assets.images.socialCard }}"
      }
    }
  }
  </script>

  <!-- Additional Business Schema for all pages -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": [{% for type in site.business.types %}"{{ type }}"{% if not loop.last %}, {% endif %}{% endfor %}],
    "name": "{{ site.author }}",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "{{ site.locations.primary }}",
      "addressCountry": "{{ site.locations.country }}"
    },
    "sameAs": [
      {%- for social, url in site.social %}
      "{{ url }}"{% if not loop.last %},{% endif %}
      {%- endfor %}
    ],
    "areaServed": [
      {%- for location in site.business.areaServed %}
      { "@type": "Place", "name": "{{ location }}" }{% if not loop.last %},{% endif %}
      {%- endfor %}
    ]
  }
  </script>
</head>
<body class="{% if title != 'Home' and title != 'Making AI systems you can rely on' %}page-light-bg{% endif %}{% if pageBodyClass %} {{ pageBodyClass }}{% endif %}">
  {% include "partials/header.njk" %}
  
  {{ content | safe }}
  
  {% include "partials/footer.njk" %}
</body>
</html>