{% if title %}
<section class="page-hero">
  <div class="page-hero-content">
    <h1 class="page-hero-title">
      <span class="title-animation-wrapper" data-title="{{ title }}">
        <span class="title-static">{{ title }}</span>
      </span>
    </h1>
    {% if subtitle %}
    <h2 class="page-hero-subtitle">{{ subtitle }}</h2>
    {% endif %}
    {% if buttonText and buttonUrl %}
    <div class="page-hero-button-container">
      <a href="{{ buttonUrl }}" class="btn btn--header{% if buttonInverted %} btn--inverted{% endif %}">{{ buttonText }}</a>
    </div>
    {% endif %}
  </div>
  <div class="page-hero-separator"></div>
</section>
{% endif %}