{% if title %}
<section class="page-hero">
  <div class="page-hero-content">
    <h1 class="page-hero-title">
      <span class="title-animation-wrapper" data-title="{{ title }}">
        <span class="title-static">{{ title }}</span>
      </span>
    </h1>
    {% if subtitle %}
    <h2 class="page-hero-subtitle">{{ subtitle }}</h2>
    {% endif %}
    <div class="page-hero-button-container">
      <div class="pricing-button-group">
        <button class="pricing-button active" data-section="photography">Photography</button>
        <button class="pricing-button" data-section="website">Website</button>
        <button class="pricing-button" data-section="privacy-seo">Privacy & SEO</button>
      </div>
    </div>
  </div>
</section>
{% endif %}