{% if title %}
<section class="cities-hero">
  <div class="cities-hero-content">
    <h1 class="cities-hero-title">
      <span class="cities-title-wrapper" data-title="{{ title }}">
        <span class="cities-title-static">{{ title }}</span>
      </span>
    </h1>
    {% if subtitle %}
    <p class="cities-hero-subtitle">{{ subtitle }}</p>
    {% endif %}
    {% if buttonText and buttonUrl %}
    <div class="cities-hero-button-container">
      <a href="{{ buttonUrl }}" class="btn{% if buttonInverted %} btn--inverted{% endif %}">{{ buttonText }}</a>
    </div>
    {% endif %}
  </div>
</section>
{% endif %}