<footer class="site-footer">
  <div class="footer-content">
    <div class="footer-top">
      <div class="footer-logo">T/</div>
      <div class="footer-menu-container">
        <div class="footer-menu-group">
          <h4 class="footer-menu-title">Location</h4>
          <div class="footer-menu-items">
            <p>Based in {{ site.business.service.locations.primary }}</p>
            {% set nextCityTour = cities | getNextCityTour %}
            {% if nextCityTour %}
            <p>{{ nextCityTour.city }}: {{ nextCityTour.dates.start | formatCityTourDates(nextCityTour.dates.end) }}</p>
            {% else %}
            <p>{{ site.business.service.locations.defaultAvailabilityMessage }}</p>
            {% endif %}
            <p>Available Worldwide</p>
          </div>
        </div>
        <div class="footer-menu-group">
          <h4 class="footer-menu-title">Studio</h4>
          <div class="footer-menu-items">
            <a href="/portfolio">Portfolio</a>
            <a href="/about">About</a>
            <a href="/insights">Insights</a>
          </div>
        </div>
        <div class="footer-menu-group">
          <h4 class="footer-menu-title">Client Info</h4>
          <div class="footer-menu-items">
            <a href="/pricing">Pricing</a>
            <a href="/cities">Cities</a>
            <a href="/contact">Access</a>
          </div>
        </div>
        <div class="footer-menu-group">
          <h4 class="footer-menu-title">Connect</h4>
          <div class="footer-menu-items">
            <a href="/contact">Inquire</a>
            <a href="/terms">Terms</a>
            <a href="/newsletter">Newsletter</a>
          </div>
        </div>
        <div class="footer-menu-group">
          <h4 class="footer-menu-title">Photographers</h4>
          <div class="footer-menu-items">
            <a href="/for-photographers">For You</a>
            <a href="/for-photographers#templates">Templates</a>
            <a href="/for-photographers#mentorship">Mentorship</a>
          </div>
        </div>
      </div>
    </div>
    <div class="footer-bottom">
      <div class="copyright">&copy; {{ currentYear }} <a href="{{ site.identity.url }}" class="footer-link">Mirelle Studio Ltd</a></div>
      <div class="social-icons">
        <a href="{{ site.integrations.social.twitter }}" target="_blank" class="social-icon x-icon">
          <img src="https://cdn.tivadar.com/icons/x-icon.png" alt="X (Twitter)" class="x-icon-img">
          <img src="https://cdn.tivadar.com/icons/x-icon-hover.png" alt="X (Twitter)" class="x-icon-hover">
        </a>
        <a href="{{ site.integrations.social.bluesky }}" target="_blank" class="social-icon bluesky-icon">
          <img src="https://cdn.tivadar.com/icons/bluesky-icon.png" alt="Bluesky" class="bluesky-icon-img">
          <img src="https://cdn.tivadar.com/icons/bluesky-icon-hover.png" alt="Bluesky" class="bluesky-icon-hover">
        </a>
        <a href="{{ site.integrations.social.instagram }}" target="_blank" class="social-icon instagram-icon">
          <img src="https://cdn.tivadar.com/icons/instagram-icon.png" alt="Instagram" class="instagram-icon-img">
          <img src="https://cdn.tivadar.com/icons/instagram-icon-hover.png" alt="Instagram" class="instagram-icon-hover">
        </a>
        <a href="{{ site.integrations.social.linkedin }}" target="_blank" class="social-icon linkedin-icon">
          <img src="https://cdn.tivadar.com/icons/linkedin-icon.png" alt="LinkedIn" class="linkedin-icon-img">
          <img src="https://cdn.tivadar.com/icons/linkedin-icon-hover.png" alt="LinkedIn" class="linkedin-icon-hover">
        </a>
      </div>
    </div>
  </div>
</footer>