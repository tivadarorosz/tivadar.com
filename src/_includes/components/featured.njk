<section class="portfolio-featured page-width">
  <div class="portfolio-intro">
    <img src="https://cdn.tivadarorosz.com/icons/double-quote.svg" alt="" class="portfolio-intro-quote">
    <p class="portfolio-intro-text">{{ portfolio.featured.intro.text }}</p>
    <div class="portfolio-featured-meta">
      <h3 class="portfolio-featured-title">{{ portfolio.featured.intro.tagline_a }}</h3>
      <p class="portfolio-featured-role">{{ portfolio.featured.intro.tagline_b }}</p>
    </div>
  </div>
  
  <div class="portfolio-featured-main">
    <a href="{{ portfolio.featured.main.link }}" class="portfolio-featured-item">
      <div class="portfolio-featured-image-wrapper">
        <img 
          src="{{ portfolio.featured.main.cover.image }}" 
          alt="{{ portfolio.featured.main.cover.alt }}" 
          class="portfolio-featured-image"
        >
      </div>
    </a>
  </div>
</section>

<section class="portfolio-gallery page-width">
  <div class="portfolio-gallery-grid">
    <!-- First row with 2/3 vs 1/3 split -->
    <a href="{{ portfolio.featured.gallery[0].link }}" class="portfolio-gallery-item portfolio-gallery-item-1">
      <div class="portfolio-gallery-image-wrapper">
        <img 
          src="{{ portfolio.featured.gallery[0].cover.image }}" 
          alt="{{ portfolio.featured.gallery[0].cover.alt }}" 
          class="portfolio-gallery-image"
        >
        <div class="portfolio-gallery-overlay">
          <div class="portfolio-gallery-meta">
            <span class="portfolio-gallery-tag">{{ portfolio.featured.gallery[0].tag | capitalize }}</span>
            <h3 class="portfolio-gallery-title">{{ portfolio.featured.gallery[0].title }}</h3>
          </div>
        </div>
      </div>
    </a>
    
    <a href="{{ portfolio.featured.gallery[1].link }}" class="portfolio-gallery-item portfolio-gallery-item-2">
      <div class="portfolio-gallery-image-wrapper">
        <img 
          src="{{ portfolio.featured.gallery[1].cover.image }}" 
          alt="{{ portfolio.featured.gallery[1].cover.alt }}" 
          class="portfolio-gallery-image"
        >
        <div class="portfolio-gallery-overlay">
          <div class="portfolio-gallery-meta">
            <span class="portfolio-gallery-tag">{{ portfolio.featured.gallery[1].tag | capitalize }}</span>
            <h3 class="portfolio-gallery-title">{{ portfolio.featured.gallery[1].title }}</h3>
          </div>
        </div>
      </div>
    </a>
  </div>
  
  <!-- Second row with 50/50 split -->
  <div class="portfolio-second-row">
    <a href="{{ portfolio.featured.gallery[2].link }}" class="portfolio-gallery-item">
      <div class="portfolio-gallery-image-wrapper">
        <img 
          src="{{ portfolio.featured.gallery[2].cover.image }}" 
          alt="{{ portfolio.featured.gallery[2].cover.alt }}" 
          class="portfolio-gallery-image"
        >
        <div class="portfolio-gallery-overlay">
          <div class="portfolio-gallery-meta">
            <span class="portfolio-gallery-tag">{{ portfolio.featured.gallery[2].tag | capitalize }}</span>
            <h3 class="portfolio-gallery-title">{{ portfolio.featured.gallery[2].title }}</h3>
          </div>
        </div>
      </div>
    </a>
    
    <a href="{{ portfolio.featured.gallery[3].link }}" class="portfolio-gallery-item">
      <div class="portfolio-gallery-image-wrapper">
        <img 
          src="{{ portfolio.featured.gallery[3].cover.image }}" 
          alt="{{ portfolio.featured.gallery[3].cover.alt }}" 
          class="portfolio-gallery-image"
        >
        <div class="portfolio-gallery-overlay">
          <div class="portfolio-gallery-meta">
            <span class="portfolio-gallery-tag">{{ portfolio.featured.gallery[3].tag | capitalize }}</span>
            <h3 class="portfolio-gallery-title">{{ portfolio.featured.gallery[3].title }}</h3>
          </div>
        </div>
      </div>
    </a>
  </div>
</section>