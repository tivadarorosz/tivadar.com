{# Column Grid with Image Component #}
<div class="page-width">
  <div class="page-separator"></div>
</div>
<section class="column-grid-image-section{% if customClass %} {{ customClass }}{% endif %} page-section">
  <div class="column-grid-image page-width">
    <div class="column-grid-image-title">
      <h3>{{ title | default("Behind Presence") }}</h3>
    </div>
    <div class="column-grid-image-areas">
      {% if introArea %}
      <div class="column-grid-image-area personal-purpose">
        <h4>{{ introArea.title }}</h4>
        <p>{{ introArea.content }}</p>
      </div>
      {% endif %}
      {% if imageUrl %}
      <img src="{{ imageUrl }}" alt="{{ imageAlt | default(title) }}" class="column-grid-image-portrait">
      {% endif %}
      <div class="column-grid-image-grid">
        {% for area in areas %}
        <div class="column-grid-image-area">
          <h4>{{ area.title }}</h4>
          <p>{{ area.content }}</p>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>